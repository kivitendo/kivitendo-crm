        row.append($("<td>" + rowData.c_comments + "</td></tr>"));
    }


    function getData() {
        $.ajax({
            dataType: 'json',
            url: 'ajax/example.php?action=getData',
            method: "GET",
            success: function( json ) {
                drawTable(json);
            },
            error:  function(){
                alert("Holen der Daten fehlgeschlagen!");
            }
        })
    }

    function saveData() {
        var obj = {};
        var array = $('#fsend').serializeArray();
        // Ein object aus dem array machen
        $.each(array, function(index, item) {
            obj[item.name] = item.value;
        });
        $.ajax({
            data: { action: "newEntry", data: JSON.stringify(obj)},
            dataType: 'json',
            type: 'POST',
            url: "ajax/example.php",
            success: function(){
                alert("Data successfully sent to server");
            },
            error:  function(){
                alert("Sending of data failed!");
            }
        })
    }



